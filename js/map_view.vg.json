{
    "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
    "description": "Interactive 2D flat world map showing all ports with a filter by Australian Port.",
    "title": "Australia's International Air Traffic Connections",
    "width": 950,
    "height": 520,
    "projection": {"type": "equalEarth"},
  
    "layer": [
      {
        "mark": {
          "type": "geoshape",
          "fill": "#f6f6f6",
          "stroke": "#cccccc",
          "strokeWidth": 0.4
        },
        "data": {
          "url": "https://cdn.jsdelivr.net/npm/world-atlas@2/countries-110m.json",
          "format": {"type": "topojson", "feature": "countries"}
        }
      },
  
      {
        "mark": {"type": "rule", "color": "#3182bd", "opacity": 0.4},
        "data": {"url": "../data/unique_routes.csv"},
        "transform": [
          {
            "filter": "port_select == 'All' || datum.AustralianPort == port_select"
          },
          {
            "lookup": "AustralianPort",
            "from": {
              "data": {"url": "../data/city_coordinates.csv"},
              "key": "city",
              "fields": ["latitude", "longitude"]
            }
          },
          {
            "lookup": "ForeignPort",
            "from": {
              "data": {"url": "../data/city_coordinates.csv"},
              "key": "city",
              "fields": ["latitude", "longitude"]
            },
            "as": ["lat2", "lon2"]
          },
          {
            "filter": "isValid(datum.latitude) && isValid(datum.longitude) && isValid(datum.lat2) && isValid(datum.lon2)"
          }
        ],
        "encoding": {
          "latitude": {"field": "latitude"},
          "longitude": {"field": "longitude"},
          "latitude2": {"field": "lat2"},
          "longitude2": {"field": "lon2"},
          "tooltip": [
            {"field": "AustralianPort", "title": "From"},
            {"field": "ForeignPort", "title": "To"},
            {"field": "Country", "title": "Country"}
          ]
        }
      },
  
      {
        "mark": {
          "type": "circle",
          "color": "#1f77b4",
          "stroke": "white",
          "strokeWidth": 0.5
        },
        "data": {"url": "../data/unique_routes.csv"},
        "transform": [
          {"aggregate": [{"op": "count", "as": "routes"}], "groupby": ["AustralianPort"]},
          {
            "lookup": "AustralianPort",
            "from": {
              "data": {"url": "../data/city_coordinates.csv"},
              "key": "city",
              "fields": ["latitude", "longitude"]
            }
          }
        ],
        "encoding": {
          "latitude": {"field": "latitude"},
          "longitude": {"field": "longitude"},
          "size": {
            "field": "routes",
            "type": "quantitative",
            "scale": {"rangeMax": 900},
            "legend": null
          },
          "tooltip": [
            {"field": "AustralianPort", "title": "Australian Port"},
            {"field": "routes", "title": "Number of Routes"}
          ]
        }
      },
  
      {
        "mark": {"type": "circle", "color": "#ff7f0e", "opacity": 0.8, "size": 60},
        "data": {"url": "../data/unique_routes.csv"},
        "transform": [
          {
            "filter": "port_select == 'All' || datum.AustralianPort == port_select"
          },
          {
            "lookup": "ForeignPort",
            "from": {
              "data": {"url": "../data/city_coordinates.csv"},
              "key": "city",
              "fields": ["latitude", "longitude"]
            },
            "as": ["lat2", "lon2"]
          },
          {
            "filter": "isValid(datum.lat2) && isValid(datum.lon2)"
          }
        ],
        "encoding": {
          "latitude": {"field": "lat2"},
          "longitude": {"field": "lon2"},
          "tooltip": [
            {"field": "ForeignPort", "title": "Foreign Port"},
            {"field": "Country", "title": "Country"}
          ]
        }
      }
    ],
  
    "params": [
      {
        "name": "port_select",
        "bind": {
          "input": "select",
          "options": [
            "All",
            "Adelaide",
            "Brisbane",
            "Broome",
            "Cairns",
            "Canberra",
            "Christmas Island",
            "Darwin",
            "Gold Coast",
            "Hobart",
            "Melbourne",
            "Newcastle",
            "Norfolk Island",
            "Perth",
            "Port Hedland",
            "Sunshine Coast",
            "Sydney",
            "Toowoomba Wellcamp",
            "Townsville"
          ],
          "name": "Select Australian Port: "
        },
        "value": "All"
      }
    ]
  }
  