{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Top 10 Foreign Countries by Volume",
    "width": 700,
    "height": 420,
    "data": { "url": "data/city_pairs.csv" },
  
    "params": [
      {
        "name": "year_select",
        "value": 2024
      },
      {
        "name": "direction",
        "value": "Total"
      },
      {
        "name": "type",
        "value": "Passengers"
      },
      {
        "name": "continentSel",
        "select": { "type": "point", "fields": ["Continent"] },
        "bind": "legend"
      }
    ],
  
    "transform": [
      { "filter": "isValid(datum.Year) && toNumber(datum.Year) == year_select" },
      { "calculate": "datum[type + '_' + direction]", "as": "flow_raw" },
      { "calculate": "isValid(datum.flow_raw) && length(toString(datum.flow_raw)) > 0 ? toNumber(datum.flow_raw) : 0", "as": "flow_value" },

      { "aggregate": [{ "op": "sum", "field": "flow_value", "as": "total_flow" }], "groupby": ["Country"] },
  
      {
        "lookup": "Country",
        "from": {
          "data": { "url": "data/mapping.csv" },
          "key": "country",
          "fields": ["continent"]
        },
        "as": ["Continent"]
      },
      { "calculate": "isValid(datum.Continent) ? datum.Continent : 'Unmapped'", "as": "Continent" },
  
      
      { "filter": { "param": "continentSel" } },
  
      { "window": [{ "op": "rank", "as": "rank" }], "sort": [{ "field": "total_flow", "order": "descending" }] },
      { "filter": "datum.rank <= 10" }
    ],

    "mark": { "type": "bar" },

    "encoding": {
      "x": {
        "field": "total_flow",
        "type": "quantitative",
        "title": "Traffic Volume"
      },
      "y": {
        "field": "Country",
        "type": "nominal",
        "sort": "-x",
        "title": "Country"
      },
      "color": {
        "field": "Continent",
        "type": "nominal",
        "title": "Continent",
        "legend": { "title": "Filter by Continent (click)" }
      },
      "tooltip": [
        { "field": "Country", "type": "nominal" },
        { "field": "total_flow", "type": "quantitative", "title": "Total Flow"},
        { "field": "Continent", "type": "nominal" }
      ]
    }
  }
  