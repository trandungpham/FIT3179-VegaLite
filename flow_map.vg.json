{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 500,
  "title": {
    "text": "Australia's International Air Traffic Connections (2024)",
    "subtitle": "Major trade routes showing freight and passenger volumes | Use controls below to zoom and pan",
    "fontSize": 20,
    "subtitleFontSize": 14
  },
  "params": [
    {
      "name": "zoom_level",
      "value": 400,
      "bind": {
        "input": "range",
        "min": 200,
        "max": 2000,
        "step": 50,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_lon",
      "value": 130,
      "bind": {
        "input": "range",
        "min": -180,
        "max": 180,
        "step": 1,
        "name": "Center Longitude: "
      }
    },
    {
      "name": "center_lat",
      "value": -10,
      "bind": {
        "input": "range",
        "min": -90,
        "max": 90,
        "step": 1,
        "name": "Center Latitude: "
      }
    }
  ],
  "projection": {
    "type": "naturalEarth1",
    "center": [{"expr": "center_lon"}, {"expr": "center_lat"}],
    "scale": {"expr": "zoom_level"}
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/nvkelso/natural-earth-vector/master/geojson/ne_110m_admin_0_countries.geojson",
        "format": {"type": "json", "property": "features"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#e8e8e8",
        "stroke": "#ffffff",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/trandungpham/FIT3179-VegaLite/refs/heads/main/data/city_pairs.csv"
      },
      "transform": [
        {
          "filter": "datum.Year == 2024"
        },
        {
          "filter": "datum.Passengers_Total > 0 || datum['Freight_Total_(tonnes)'] > 0"
        },
        {
          "aggregate": [
            {"op": "sum", "field": "Passengers_Total", "as": "total_passengers"},
            {"op": "sum", "field": "Freight_Total_(tonnes)", "as": "total_freight"}
          ],
          "groupby": ["AustralianPort", "ForeignPort", "Country"]
        },
        {
          "filter": "datum.total_passengers > 50000 || datum.total_freight > 1000"
        },
        {
          "calculate": "datum.total_passengers + datum.total_freight * 10",
          "as": "traffic_volume"
        },
        {
          "lookup": "AustralianPort",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/trandungpham/FIT3179-VegaLite/refs/heads/main/data/city_coordinates.json"
            },
            "key": "city",
            "fields": ["longitude", "latitude"]
          },
          "as": ["origin_lon", "origin_lat"]
        },
        {
          "lookup": "ForeignPort",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/trandungpham/FIT3179-VegaLite/refs/heads/main/data/city_coordinates.json"
            },
            "key": "city",
            "fields": ["longitude", "latitude"]
          },
          "as": ["dest_lon", "dest_lat"]
        },
        {
          "filter": "datum.origin_lon != null && datum.dest_lon != null"
        }
      ],
      "mark": {
        "type": "rule",
        "opacity": 0.6,
        "strokeCap": "round"
      },
      "encoding": {
        "longitude": {"field": "origin_lon", "type": "quantitative"},
        "latitude": {"field": "origin_lat", "type": "quantitative"},
        "longitude2": {"field": "dest_lon"},
        "latitude2": {"field": "dest_lat"},
        "strokeWidth": {
          "field": "traffic_volume",
          "type": "quantitative",
          "scale": {
            "type": "sqrt",
            "range": [0.5, 8]
          },
          "legend": {
            "title": "Traffic Volume",
            "format": ".2s"
          }
        },
        "color": {
          "field": "Country",
          "type": "nominal",
          "scale": {
            "scheme": "tableau20"
          },
          "legend": {
            "title": "Destination Country",
            "orient": "right",
            "columns": 1,
            "labelLimit": 150
          }
        },
        "tooltip": [
          {"field": "AustralianPort", "type": "nominal", "title": "From"},
          {"field": "ForeignPort", "type": "nominal", "title": "To"},
          {"field": "Country", "type": "nominal", "title": "Country"},
          {"field": "total_passengers", "type": "quantitative", "title": "Total Passengers", "format": ","},
          {"field": "total_freight", "type": "quantitative", "title": "Total Freight (tonnes)", "format": ",.1f"}
        ]
      }
    },
    {
      "data": {
        "url": "data/city_pairs.csv"
      },
      "transform": [
        {
          "filter": "datum.Year == 2024"
        },
        {
          "aggregate": [
            {"op": "sum", "field": "Passengers_Total", "as": "total_passengers"}
          ],
          "groupby": ["AustralianPort"]
        },
        {
          "lookup": "AustralianPort",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/trandungpham/FIT3179-VegaLite/refs/heads/main/data/city_coordinates.json"
            },
            "key": "city",
            "fields": ["longitude", "latitude"]
          },
          "as": ["longitude", "latitude"]
        },
        {
          "filter": "datum.longitude != null"
        }
      ],
      "mark": {
        "type": "circle",
        "color": "#d62728",
        "size": 100,
        "opacity": 0.8
      },
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "tooltip": [
          {"field": "AustralianPort", "type": "nominal", "title": "Australian Port"},
          {"field": "total_passengers", "type": "quantitative", "title": "Total Passengers", "format": ","}
        ]
      }
    },
    {
      "data": {
        "url": "data/city_pairs.csv"
      },
      "transform": [
        {
          "filter": "datum.Year == 2024"
        },
        {
          "aggregate": [
            {"op": "sum", "field": "Passengers_Total", "as": "total_passengers"}
          ],
          "groupby": ["ForeignPort", "Country"]
        },
        {
          "filter": "datum.total_passengers > 50000"
        },
        {
          "lookup": "ForeignPort",
          "from": {
            "data": {
              "url": "data/city_coordinates.json"
            },
            "key": "city",
            "fields": ["longitude", "latitude"]
          },
          "as": ["longitude", "latitude"]
        },
        {
          "filter": "datum.longitude != null"
        }
      ],
      "mark": {
        "type": "circle",
        "color": "#1f77b4",
        "size": 80,
        "opacity": 0.7
      },
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "tooltip": [
          {"field": "ForeignPort", "type": "nominal", "title": "Foreign Port"},
          {"field": "Country", "type": "nominal", "title": "Country"},
          {"field": "total_passengers", "type": "quantitative", "title": "Total Passengers", "format": ","}
        ]
      }
    }
  ],
  "config": {
    "view": {"stroke": null},
    "background": "#f9f9f9"
  }
}

